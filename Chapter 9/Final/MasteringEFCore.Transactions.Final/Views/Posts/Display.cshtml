@model MasteringEFCore.Transactions.Final.Models.Post

@{
    ViewData["Title"] = "Display";
    Layout = "_BlogLayout";
}

<div class="row">
    <div class="col-sm-8 blog-main">
        <div class="blog-post">
            <div class="blog-header">
                <h1 class="blog-title">@Model.Title</h1>
                <p class="lead blog-description">@Model.CreatedAt.ToString("MMMM dd, yyyy") by <a href="#">@Model.Author.DisplayName</a></p>
            </div>
            <p>@Model.Content</p>
        </div>
    </div>
</div>
<hr />
<vc:add-comment post-id="@Model.Id"></vc:add-comment>
<hr />
<div id="commentsList">
    <vc:comments-list post-id="@Model.Id"></vc:comments-list>
</div>

